#include <iostream>
#include <vector>

using namespace std;

void quicksort(vector<int>& arr, int left, int right) {
    int i = left, j = right;
    int pivot = arr[(left + right) / 2];
    while (i <= j) {
        while (arr[i] < pivot) {
            i++;
        }
        while (arr[j] > pivot) {
            j--;
        }
        if (i <= j) {
            swap(arr[i], arr[j]);
            i++;
            j--;
        }
    }
    if (left < j) {
        quicksort(arr, left, j);
    }
    if (i < right) {
        quicksort(arr, i, right);
    }
}

int main() {
    vector<int> my_array = {3, 5, 1, 4, 2};
    quicksort(my_array, 0, my_array.size() - 1);
    for (int i = 0; i < my_array.size(); i++) {
        cout << my_array[i] << " ";
    }
    cout << endl;
    return 0;
}
