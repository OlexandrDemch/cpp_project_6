#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

int main()
{
    int n;
    cin >> n;

    vector<int> arr(n);
    int sum = 0;

    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        sum += arr[i];
    }

    if (sum / n > 0) {
        int m = (2 * n) / 3;
        sort(arr.begin(), arr.begin() + m);
    } else {
        int m = n / 3;
        sort(arr.begin(), arr.begin() + m);
    }

    reverse(arr.begin() + (n / 3), arr.end());

    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    return 0;
}
